<div id="head"> <a href="/"><h1>SAWIT Educate To Empower</h1></a> </div>
<div  id="editFacilit">
<h2 class="text-center">Update Faclitator Details</h2>
<button type="button" class="dropbtn" id="mainmenu" onclick="location.href='/lecturer'">Back To Lecturer List</button>

{{#data}}
<form id="formEditFacilit" autocomplete="on" action="/lecturer/updateFacilitator/{{idNo}}" method="Post">
  <div class="group">
  <input type="text" name="idNo" value="{{idNo}}">
    <label for="idNo">ID Number</label>
  </div>
  <div class="group">
    <input type="text" name="Name" value="{{Name}}">
    <label for="name">Name</label>
  </div>
  <div class="group">
    <input type="text" name="surname" value="{{surname}}">
    <label for="surname">Surname</label>
  </div>
  <div class="group">
    <input type="text" name="phone" value="{{phone}}">
    <label for="phone">Phone Number</label>
  </div>

  <div class="group">
    <input type="text" name="email" value="{{email}}">
    <label for="address">E-mail</label>
  </div>

  <div class="group">
    <input type="text"  name="course" value="{{course}}">
    <label for="course">Course</label>
  </div>
  <div class="group">
    <input type="text"  name="location" value="{{location}}">
    <label for="name">Course Location</label>
  </div>
  <div class="btn">
    <input type="submit" value="Submit"><input action="action" type="submit" value="Cancel" onclick="history.go(-1);"/>
    
  </div>

</form>
{{/data}}
</div>